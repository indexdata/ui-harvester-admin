{
  "name": "@folio/harvester-admin",
  "version": "0.0.1",
  "description": "Admin console for the Index Data Harvester",
  "repository": "https://github.com/indexdata/ui-harvester-admin",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "scripts": {
    "start": "stripes serve --port 3003 --okapi http://ironman:9130 --hasAllPerms",
    "lint": "eslint -f unix ."
  },
  "stripes": {
    "actsAs": [
      "app",
      "settings"
    ],
    "displayName": "ui-harvester-admin.meta.title",
    "route": "/ha",
    "queryResource": "query",
    "icons": [
      {
        "name": "app",
        "alt": "Admin console for the Index Data Harvester",
        "title": "Harvester admin"
      }
    ],
    "okapiInterfaces": {
      "course-reserves-storage": "0.2",
      "term-storage": "0.1",
      "department-storage": "0.1",
      "course-type-storage": "0.1",
      "processing-status-storage": "0.1",
      "copyright-status-storage": "0.1",
      "role-storage": "0.1",
      "locations": "3.0",
      "item-storage": "7.1 8.0 9.0",
      "loan-types": "2.2"
    },
    "permissionSets": [
      {
        "permissionName": "module.harvester-admin.enabled",
        "displayName": "UI: harvester-admin module is enabled",
        "visible": false
      },
      {
        "permissionName": "settings.harvester-admin.enabled",
        "displayName": "Settings (harvester-admin): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": false
      },
      {
        "permissionName": "ui-harvester-admin.read-jobs",
        "displayName": "Harvester admin: see what jobs exist, their status, etc.",
        "subPermissions": [
          "module.harvester-admin.enabled",
          "harvester-admin.harvestables.collection.get"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-harvester-admin.maintain-jobs",
        "displayName": "Harvester admin: see, start and stop jobs",
        "subPermissions": [
          "ui-harvester-admin.read-jobs"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-harvester-admin.maintain-all-jobs",
        "displayName": "Harvester admin: see, start and stop jobs for all customers",
        "subPermissions": [
          "ui-harvester-admin.maintain-jobs"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-harvester-admin.maintain-pipelines",
        "displayName": "Harvester admin: maintain pipeline stages and pipelines",
        "subPermissions": [
          "module.harvester-admin.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-harvester-admin.all",
        "displayName": "Harvester admin: All permissions",
        "subPermissions": [
          "ui-harvester-admin.maintain-all-jobs",
          "ui-harvester-admin.maintain-pipelines",
          "settings.harvester-admin.enabled"
        ],
        "visible": true
      }
    ]
  },
  "dependencies": {
    "use-deep-compare": "^1.1.0"
  },
  "peerDependencies": {
    "@folio/stripes": "^7.0.0",
    "prop-types": "*",
    "react": "*",
    "react-intl": "*",
    "react-router": "*",
    "react-router-dom": "*"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.0",
    "@folio/eslint-config-stripes": "~6.1.0",
    "@folio/stripes": "^7.0.0",
    "@folio/stripes-cli": "^2.4.0",
    "eslint": "^6.2.1",
    "react": "^16.8.6",
    "react-intl": "^5.7.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "resolutions": {
    "postcss-custom-properties": "12.0.0"
  }
}
